@model List<EntityLayer.Concrete.Category> 

@{
    ViewData["Title"] = "CategoryList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Kategoriler</h5>
                </div>
                <div class="ibox-content">

                    <table class="table">
                        <thead>
                            <tr>
                                <th>Kategori Adı</th>
                                <th>Kategori Açıklaması</th>
                                <th>Sil</th>
                                <th>Düzenle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr style="text-align:initial">
                                    <td>@item.CategoryName</td>
                                    <td>@item.CategoryDescription</td>
                                    <td><a href="~/Admin/Category/CategoryDelete/@item.CategoryID/" class="btn btn-danger">Sil</a></td>
                                    <td><a href="~/Admin/Category/CategoryUpdate/@item.CategoryID/" class="btn btn-warning">Düzenle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
