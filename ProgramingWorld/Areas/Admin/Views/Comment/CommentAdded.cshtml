@model EntityLayer.Concrete.Comment

@{
    ViewData["Title"] = "CommentAdded";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h5>Yorum Ekle</h5>
            </div>
            <div class="ibox-content">
                <form action="CommentAdded" method="post">
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Blog Adı</label>
                        <div class="col-sm-10">@Html.DropDownListFor(I => I.BlogID, (List<SelectListItem>)ViewBag.Liste, new { @class = "form-control" })</div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Kullanıcı Adı</label>
                        <div class="col-sm-10">@Html.TextBoxFor(I => I.CommentUserName, new { @class = "form-control" })</div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Blog Puanı</label>
                        <div class="col-sm-10">@Html.TextBoxFor(I => I.BlogScore, new { @class = "form-control" })</div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Yorum</label>
                        <div class="col-sm-10">@Html.TextAreaFor(I => I.CommentContent, 10, 3, new { @class = "form-control" })</div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group row">
                        <div class="col-sm-4 col-sm-offset-2">
                            <a href="~/Admin/Comment/CommentAll/" class="btn btn-white btn-sm" type="submit">İptal Et</a>
                            <button class="btn btn-info btn-sm" type="submit">Gönder</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

