@model List<EntityLayer.Concrete.Comment> 

@{
    ViewData["Title"] = "CommentAll";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Yorumlar</h5>
                </div>
                <div class="ibox-content">

                    <table class="table">
                        <thead>
                            <tr>
                                <th>Blog Adı</th>
                                <th>Yorum Yapan Kullanıcının Adı</th>
                                <th>Yorum Tarihi</th>
                                <th>Verilen Skor</th>
                                <th>Sil</th>
                                <th>Düzenle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr style="text-align:initial">
                                    <td>@item.Blog.BlogTitle</td>
                                    <td>@item.CommentUserName</td>
                                    <td>@item.CommentDate</td>
                                    <td>@item.BlogScore</td>
                                    <td><a href="~/Admin/Comment/CommentDeleted/@item.CommentID" class="btn btn-danger">Sil</a></td>
                                    <td><a href="~/Admin/Comment/CommentUpdated/@item.CommentID" class="btn btn-warning">Düzenle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
