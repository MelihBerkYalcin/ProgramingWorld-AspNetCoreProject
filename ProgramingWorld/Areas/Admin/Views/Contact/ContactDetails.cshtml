@model EntityLayer.Concrete.Contact

@{
    ViewData["Title"] = "ContactDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h5>İletişim Detayı</h5>
            </div>
            <div class="ibox-content">
                <form>
                    @Html.TextBoxFor(I => I.ContactID, new { hidden = "true" })
                    <div class="form-group  row">
                        <label class="col-sm-2 col-form-label">Mesaj Gönderen</label>
                        <div class="col-sm-10">@Html.TextBoxFor(I => I.ContactUserName, new { @class = "form-control", disabled = "true" })</div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Mesaj Gönderen EMail</label>
                        <div class="col-sm-10">@Html.TextBoxFor(I => I.ContactMail, new { @class = "form-control", disabled = "true" })</div>
                    </div>
                    <div class="form-group  row">
                        <label class="col-sm-2 col-form-label">Mesaj Konusu</label>
                        <div class="col-sm-10">@Html.TextBoxFor(I => I.ContactSubject, new { @class = "form-control", disabled = "true" })</div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Mesaj Gönderim Tarihi</label>
                        <div class="col-sm-10">@Html.TextBoxFor(I => I.ContactDate, new { @class = "form-control", disabled = "true" })</div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Mesaj Detayı</label>
                        <div class="col-sm-10">@Html.TextAreaFor(I => I.ContactMessage, 10, 3, new { @class = "form-control", disabled = "true" })</div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group row">
                        <div class="col-sm-4 col-sm-offset-2">
                            <a href="~/Admin/Contact/ContactDeleted/@Model.ContactID" class="btn btn-danger btn-sm" type="submit">Sil</a>
                            <a href="~/Admin/Contact/ContactAll" class="btn btn-success btn-sm" type="submit">Okudum</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
