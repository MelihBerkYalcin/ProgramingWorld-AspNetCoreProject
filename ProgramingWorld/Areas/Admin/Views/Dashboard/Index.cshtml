@model List<EntityLayer.Concrete.AppUser>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-2">
            <div class="widget style1 red-bg">
                <div class="row vertical-align">
                    <div class="col-3">
                        <i class="fa fa-th-large fa-3x"></i>
                    </div>
                    <div class="col-9 text-right">
                        <span>Toplam Blog Sayısı</span>
                        <h2 class="font-bold">@ViewBag.Blogs</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-2">
            <div class="widget style1 lazur-bg">
                <div class="row vertical-align">
                    <div class="col-3">
                        <i class="fa fa-comments fa-3x"></i>
                    </div>
                    <div class="col-9 text-right">
                        <span>Toplam Yorum Sayısı</span>
                        <h2 class="font-bold">@ViewBag.CommentAll</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-2">
            <div class="widget style1 yellow-bg">
                <div class="row vertical-align">
                    <div class="col-3">
                        <i class="fa fa-bars fa-3x"></i>
                    </div>
                    <div class="col-9 text-right">
                        <span>Kategori Sayısı</span>
                        <h2 class="font-bold">@ViewBag.Category</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-2">
            <div class="widget style1 red-bg">
                <div class="row vertical-align">
                    <div class="col-3">
                        <i class="fa fa-user fa-3x"></i>
                    </div>
                    <div class="col-9 text-right">
                        <span>Yazar Sayısı</span>
                        <h2 class="font-bold">@ViewBag.Users</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-2">
            <div class="widget style1 lazur-bg">
                <div class="row vertical-align">
                    <div class="col-3">
                        <i class="fa fa-comments fa-3x"></i>
                    </div>
                    <div class="col-9 text-right">
                        <span>Toplam Yorum Sayısı</span>
                        <h2 class="font-bold">@ViewBag.CommentAll</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-2">
            <div class="widget style1 yellow-bg">
                <div class="row vertical-align">
                    <div class="col-3">
                        <i class="fa fa-envelope fa-3x"></i>
                    </div>
                    <div class="col-9 text-right">
                        <span>Toplam Mesaj Sayısı</span>
                        <h2 class="font-bold">@ViewBag.AllMessage</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="widget-head-color-box navy-bg p-lg text-center">
                <div class="m-b-md">
                    <h2 class="font-bold no-margins">
                        @Model.FirstOrDefault().UserName
                    </h2>
                </div>
                <img src="@Model.FirstOrDefault().IMGURL" style="width:150px;height:150px" class="rounded-circle circle-border m-b-md" alt="profile">
            </div>
            <div class="widget-text-box">
                <h4 class="media-heading">@Model.FirstOrDefault().UserName</h4>
                <p>@Model.FirstOrDefault().About</p>
                <div class="text-right">
                    <a href="" class="btn btn-xs btn-white"><i class="fa fa-thumbs-up"></i> Beğen </a>
                    <a href="" class="btn btn-xs btn-primary"><i class="fa fa-heart"></i> Kalp At</a>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-3">
        <div class="ibox">
            <div class="ibox-content">
                <h5>Blog Durumu</h5>
                <h2>@ViewBag.Blogs%</h2>
                <div class="progress progress-xl">
                    <div style="width: @ViewBag.Blogs%;" class="progress-bar"></div>
                </div>

                <div class="m-t-sm small">Blog Durumu yenilendi.</div>
            </div>
        </div>
    </div>

    <div class="col-lg-3">
        <div class="ibox">
            <div class="ibox-content">
                <h5>Yorum Durumu</h5>
                <h2>@ViewBag.CommentAll%</h2>
                <div class="progress progress-xl">
                    <div style="width:@ViewBag.CommentAll%;" class="progress-bar"></div>
                </div>

                <div class="m-t-sm small">Yorum Durumu yenilendi.</div>
            </div>
        </div>
    </div>

    <div class="col-lg-3">
        <div class="ibox">
            <div class="ibox-content">
                <h5>Toplam Puan</h5>
                <h2>@ViewBag.Puan%</h2>
                <div class="progress progress-xl">
                    <div style="width: @ViewBag.Puan%;" class="progress-bar"></div>
                </div>

                <div class="m-t-sm small">Toplam Puan yenilendi.</div>
            </div>
        </div>
    </div>

    <div class="col-lg-3">
        <div class="ibox">
            <div class="ibox-content">
                <h5>Kategori Sayısı</h5>
                <h2>@ViewBag.Category%</h2>
                <div class="progress progress-xl">
                    <div style="width: @ViewBag.Category%;" class="progress-bar progress-bar-danger"></div>
                </div>

                <div class="m-t-sm small">Kategori Sayısı yenilendi.</div>
            </div>
        </div>
    </div>
</div>

<div class="col-lg-12">
    <div class="ibox ">
        <div class="ibox-title">
            <h5>Sunucunun Durumu</h5>
        </div>
        <div class="ibox-content">

            <div class="flot-chart">
                <div class="flot-chart-content" id="flot-line-chart-moving"></div>
            </div>
        </div>
    </div>
</div><br /><br /><br /><br />