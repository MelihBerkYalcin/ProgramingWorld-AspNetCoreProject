@model EntityLayer.Concrete.Message

@{
    ViewData["Title"] = "WriterAllMessageDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-3">
            <div class="ibox ">
                <div class="ibox-content mailbox-content">
                    <div class="file-manager">
                        <a class="btn btn-block btn-primary compose-mail" href="~/Admin/Message/MessageAdded/">Mesaj Gönder</a>
                        <div class="space-25"></div>
                        <h5>Menüler</h5>
                        <ul class="folder-list m-b-md" style="padding: 0">
                            <li><a href="~/Admin/Message/SenderBoxMessage/"> <i class="fa fa-inbox "></i> Gelen Kutusu <span class="label label-primary float-right">@ViewBag.SenderMessageCount</span> </a></li>
                            <li><a href="~/Admin/Message/ReceiverBoxMessage/"> <i class="fa fa-envelope-o"></i> Giden Kutusu <span class="label label-warning float-right">@ViewBag.ReceiverMessageCount</span> </a></li>
                            <li><a href="~/Admin/Message/WriterAllMessage/"> <i class="fa fa-certificate"></i> Yazarların Tüm Mesajları <span class="label label-success float-right">@ViewBag.AllMessage</span></a></li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-9 animated fadeInRight">
            <div class="mail-box-header">
                <h2>
                    Mesaj Detayı
                </h2>
            </div>
            <div class="mail-box">

                <form>
                    <div class="mail-body">
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Gönderenin Kullanıc Adı:</label>

                            <div class="col-sm-10"><input type="text" value="@Model.SenderUser.UserName" class="form-control" disabled="disabled" /></div><br />
                            <label class="col-sm-2 col-form-label">Alıcının Kullanıc Adı:</label>

                            <div class="col-sm-10"><input type="text" value="@Model.ReceiverUser.UserName" class="form-control" disabled="disabled" /></div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Mesajınızın Konusu:</label>
                            <div class="col-sm-10">@Html.TextBoxFor(I => I.Subject, new { @class = "form-control" })</div>
                        </div>

                    </div>

                    <div class="mail-text h-200">
                        @Html.TextAreaFor(I => I.MessageDetails, 15, 3, new { @class = "form-control" })
                        <div class="clearfix"></div>
                    </div>
                    <div class="mail-body text-right tooltip-demo">
                        <a href="~/Admin/Message/MessageUpdate/@Model.MessageID" class="btn btn-sm btn-primary" data-toggle="tooltip" data-placement="top" title="Send"><i class="fa fa-reply"></i> Güncelle</a>
                        <a href="~/Admin/Message/MessageDelete/@Model.MessageID" class="btn btn-sm btn-danger" data-toggle="tooltip" data-placement="top" title="Send"><i class="fa fa-reply"></i> Sil</a>
                    </div>
                    <div class="clearfix"></div>
                </form>

            </div>
        </div>
    </div>
</div>
