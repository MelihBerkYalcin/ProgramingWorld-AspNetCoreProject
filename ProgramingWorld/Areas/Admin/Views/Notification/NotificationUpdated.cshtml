@model EntityLayer.Concrete.Notification

@{
    ViewData["Title"] = "NotificationUpdated";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h5>Bildirim Güncelle</h5>
            </div>
            <div class="ibox-content">
                <form action="NotificationUpdated" method="post">
                    @Html.TextBoxFor(I => I.NotificationID, new { hidden = "true" })
                    <div class="form-group  row">
                        <label class="col-sm-2 col-form-label">Bildirim Başlığı</label>
                        <div class="col-sm-10">@Html.TextBoxFor(I => I.NotificationTitle, new { @class = "form-control" })</div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Bildirim Sembolü</label>
                        <div class="col-sm-10">@Html.TextAreaFor(I => I.NotificationTitleSymbol, 10, 3, new { @class = "form-control" })</div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Bildirim Rengi</label>
                        <div class="col-sm-10">@Html.TextAreaFor(I => I.NotificationColor, 10, 3, new { @class = "form-control" })</div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Bildirim Detayı</label>
                        <div class="col-sm-10">@Html.TextAreaFor(I => I.NotificationDetails, 10, 3, new { @class = "form-control" })</div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group row">
                        <div class="col-sm-4 col-sm-offset-2">
                            <a href="~/Admin/Notification/NotificationAll" class="btn btn-white btn-sm" type="submit">İptal Et</a>
                            <button class="btn btn-warning btn-sm" type="submit">Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

