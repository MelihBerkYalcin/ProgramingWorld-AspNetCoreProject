@using EntityLayer.Concrete
@model List<SubCategory>

@{
    ViewData["Title"] = "SubCategoryList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Alt Kategori</h5>
                </div>
                <div class="ibox-content">

                    <table class="table">
                        <thead>
                            <tr>
                                <th>Alt Kategori Adı</th>
                                <th>Kategori Adı</th>
                                <th>Sil</th>
                                <th>Düzenle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr style="text-align:initial">
                                    <td>@item.SubCategoryName</td>
                                    <td>@item.Category.CategoryName</td>
                                    <td><a href="~/Admin/SubCategory/SubCategoryDeleted/@item.SubCategoryID" class="btn btn-danger">Sil</a></td>
                                    <td><a href="~/Admin/SubCategory/SubCategoryUpdate/@item.SubCategoryID" class="btn btn-warning">Düzenle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
