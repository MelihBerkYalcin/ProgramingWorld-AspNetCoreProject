@using EntityLayer.Concrete 
@model List<Update> 

@{
    ViewData["Title"] = "UpdatedList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Güncelleme Notları</h5>
                </div>
                <div class="ibox-content">

                    <table class="table">
                        <thead>
                            <tr>
                                <th>Güncelleme Adı</th>
                                <th>Güncelleme Tarihi</th>
                                <th>Sil</th>
                                <th>Düzenle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr style="text-align:initial">
                                    <td>@item.UpdateName</td>
                                    <td>@item.UpdateDateTime.ToLongDateString()</td>
                                    <td><a href="~/Admin/Updated/UpdatedListDeleted/@item.UpdateID" class="btn btn-danger">Sil</a></td>
                                    <td><a href="~/Admin/Updated/UpdatedListUpdate/@item.UpdateID" class="btn btn-warning">Düzenle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

