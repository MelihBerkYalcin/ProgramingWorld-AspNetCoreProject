@model ProgramingWorld.Models.UserSignUpViewModel

@{
    ViewData["Title"] = "WriterAdd";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h5>Yazar Ekle</h5>
            </div>
            <div class="ibox-content">
                <form action="WriterAdd" method="post">
                    <div class="form-group  row">
                        <label class="col-sm-2 col-form-label">Adı Soyadı</label>
                        <div class="col-sm-10">@Html.TextBoxFor(I => I.NameSurname, new { @class = "form-control", placeholder = "Adı Soyadı Giriniz" })</div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Kullanıcı Adı</label>
                        <div class="col-sm-10">@Html.TextBoxFor(I => I.UserName, new { @class = "form-control", placeholder = "Kullancı Adı Giriniz" })</div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">EMail Adresi</label>
                        <div class="col-sm-10">@Html.TextBoxFor(I => I.EMail, new { @class = "form-control", placeholder = "EMail Adresi Giriniz" })</div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Şifresi</label>
                        <div class="col-sm-10">@Html.TextBoxFor(I => I.Password, new { @class = "form-control", placeholder = "Şifre Giriniz" })</div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Şifre Tekrar</label>
                        <div class="col-sm-10">@Html.TextBoxFor(I => I.ConfirmPassword, new { @class = "form-control", placeholder = "Şifre Tekrar Giriniz" })</div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Telefon Numarası</label>
                        <div class="col-sm-10">@Html.TextBoxFor(I => I.PhoneNumber, new { @class = "form-control", Type = "tel", placeholder = "Telefon Numarası Giriniz" })</div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Açıklaması</label>
                        <div class="col-sm-10">@Html.TextAreaFor(I => I.About, 10, 3, new { @class = "form-control", placeholder = "Açıklama Giriniz" })</div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Rolü</label>
                        <div class="col-sm-10">@Html.DropDownListFor(I => I.AppRole.Id, (List<SelectListItem>)ViewBag.List, new { @class = "form-control" })</div>
                    </div>
                    <hr />
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Facebook Adresi</label>
                        <div class="col-sm-10">@Html.TextBoxFor(I => I.Facebook, new { @class = "form-control", placeholder = "Facebook Adresi Giriniz" })</div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Instagram Adresi</label>
                        <div class="col-sm-10">@Html.TextBoxFor(I => I.Instagram, new { @class = "form-control", placeholder = "Instagram Adresi Giriniz" })</div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Youtube Adresi</label>
                        <div class="col-sm-10">@Html.TextBoxFor(I => I.Youtube, new { @class = "form-control", placeholder = "Youtube Adresi Giriniz" })</div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group row">
                        <div class="col-sm-4 col-sm-offset-2">
                            <a href="~/Admin/Writer/WriterAll" class="btn btn-white btn-sm" type="submit">İptal Et</a>
                            <button class="btn btn-info btn-sm" type="submit">Oluştur</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

