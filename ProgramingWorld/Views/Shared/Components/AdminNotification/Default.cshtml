@using EntityLayer.Concrete
@model List<Notification>

<li class="dropdown">
    <a class="dropdown-toggle count-info" data-toggle="dropdown" href="#">
        <i class="fa fa-bell"></i>  <span class="label label-primary">@ViewBag.Notification</span>
    </a>
    <ul class="dropdown-menu dropdown-alerts">
        @foreach (var item in Model.Take(5))
        {
        <li>
            <a href="mailbox.html" class="dropdown-item">
                <div>
                    <i class="mdi @item.NotificationTitleSymbol @item.NotificationColor"></i> @item.NotificationTitle
                    <span class="float-right text-muted small">@item.NotificationDate.ToShortDateString() | @item.NotificationDate.ToShortTimeString()</span>
                </div>
            </a>
        </li>
        }
        <li class="dropdown-divider"></li>
        <li>
            <div class="text-center link-block">
                <a href="notifications.html" class="dropdown-item">
                    <strong>Bütün Bildirimleri Gör</strong>
                    <i class="fa fa-angle-right"></i>
                </a>
            </div>
        </li>
    </ul>
</li>