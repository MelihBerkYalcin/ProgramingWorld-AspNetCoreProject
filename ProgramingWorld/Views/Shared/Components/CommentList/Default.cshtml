@using EntityLayer.Concrete
@model List<Comment>

<div class="custombox clearfix">
    <h4 class="small-title">Yorumlar</h4>
    <div class="row">
        <div class="col-lg-12">
            <div class="comments-list">
                @if (Model.Count() > 0)
                {
                    @foreach (var item in Model)
                    {
                        <div class="media">
                            <div class="media-body">
                                <p hidden>@item.CommentID</p>
                                <h4 class="media-heading user_name">@item.CommentUserName<small>@item.CommentDate.ToString("dd-MMM-yyyy") | @item.CommentDate.ToShortTimeString()</small></h4>
                                <p>@item.CommentContent</p>
                                @*<a href="Yorum" class="btn btn-primary btn-sm">Yorum Yap</a>*@
                                <hr />
                            </div>
                        </div>
                        }
                }
                else
                {
                    <h5>Bu Konu Hakkında Hiç Yorum Yapılmamış.<br />İlk Yorumu Sen Yapmak İstermisin.</h5>
                }
            </div>
        </div><!-- end col -->
    </div><!-- end row -->
</div><!-- end custom-box -->

<hr class="invis1">