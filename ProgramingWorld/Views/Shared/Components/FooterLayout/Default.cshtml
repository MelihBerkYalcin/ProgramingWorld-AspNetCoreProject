@using EntityLayer.Concrete
@model List<About>

@{ 
    string email = "";
}

<footer class="footer">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <div class="widget">
                    <div class="footer-text text-center">
                        <br />
                        <a href="~/Blog/Index/"><img src="~/Images/LogoWrite.png" alt="" class="img-fluid"></a><br>
                        <p>@Model.FirstOrDefault().AboutDetails</p>
                        <div class="social">
                            @await Component.InvokeAsync("SocialMediaFooter")
                        </div>

                        <hr class="invis">

                        <div class="newsletter-widget text-center">
                            <form class="form-inline" asp-action="EMailGetLogin" asp-controller="Blog" method="post">
                                <input type="email" class="form-control" asp-for="@(email)" placeholder="EMail Adresinizi Giriniz..." required>
                                <button type="submit" class="btn btn-primary">Giriş Yap <i class="fa fa-envelope-open-o"></i></button>
                            </form>
                        </div><!-- end newsletter -->
                    </div><!-- end footer-text -->
                </div><!-- end widget -->
            </div><!-- end col -->
        </div>

        <div class="row">
            <div class="col-md-12 text-center">
                <br>
                <br>
                <div class="copyright">© @DateTime.Now.Year <a href="http://www.FullProgramDunyasi.Com/">www.FullProgramDunyasi.Com</a> Tüm Hakları Saklıdır. Bilgi Telif Hakkı veya DMCA mail iletişim: beyazsancakefsanesi@gmail.com</div>
            </div>
        </div>
    </div><!-- end container -->
</footer>