@using EntityLayer.Concrete
@model List<AppUser>

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Bilgi Görünümün</h4>
                <div class="d-flex mt-5 align-items-top">
                    <img src="@Model.FirstOrDefault().IMGURL" class="img-sm rounded-circle mr-3" alt="image">
                    <div class="mb-0 flex-grow">
                        <h5 class="mr-2 mb-2">@Model.FirstOrDefault().UserName</h5>
                        <p class="mb-0 font-weight-light">@Model.FirstOrDefault().About</p>
                    </div>
                    <div class="ml-auto">
                        <i class="mdi mdi-heart-outline text-muted"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>