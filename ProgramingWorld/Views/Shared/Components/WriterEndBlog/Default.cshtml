@using EntityLayer.Concrete
@model IEnumerable<Blog>

<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Son Açılan Bloglar</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> Blog Başlığı </th>
                                <th> Blog Oluşturma Tarihi </th>
                                <th> Blog Kategorisi </th>
                                <th> Blog Yazarı </th>
                                <th> Blog Detay </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    <img src="@item.BlogIMGURL" class="mr-2" alt="image"> @item.BlogTitle
                                </td>
                                <td> @item.BlogCreateDate.ToString("dd-MMM-yyyy") </td>
                                <td>
                                    <label class="badge badge-info">@item.Category.CategoryName</label>
                                </td>
                                <td> @item.AppUser.UserName <b style="color: #1874cd">&</b> @item.AppUser.NameSurname </td>
                                <td><a href="~/Blog/BlogDetails/@item.BlogID/@(Url.AdresDuzenle(item.BlogTitle))" class="btn-sm btn-info">Detay</a></td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>