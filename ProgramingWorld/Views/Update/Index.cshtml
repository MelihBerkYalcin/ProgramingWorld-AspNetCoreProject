@using EntityLayer.Concrete
@model List<Update>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

<center style="margin-left:200px">
    <section class="section wb">
        <div class="container">
            <div class="row">
                <div class="col-lg-9 col-md-12 col-sm-12 col-xs-12">
                    @if (Model.Count > 0)
                    {
                        <h4 style="color: #1874cd"><b>GÜNCELLEME NOTLARI</b></h4><br />
                        <hr />
                        @foreach (var item in Model)
                        {
                            <b>Güncelleme Adı :</b> @item.UpdateName <b style="margin-left:240px">Güncelleme Tarihi :</b> @item.UpdateDateTime.ToString("dd-MMM-yyy")<br />
                            <hr />
                            <br />
                            <b><u>Ekleme Ve Güncelleme Notları</u></b><br /><br />
                            @Html.Raw(item.UpdateDetails)
                            <br />
                            <hr />
                        }
                    }
                    else
                    {
                        <h4 style="color: #1874cd"><b>GÜNCELLEME NOTLARI BULUNAMADI...</b></h4>
                    }
                </div>
            </div>
        </div>
    </section>
</center>
