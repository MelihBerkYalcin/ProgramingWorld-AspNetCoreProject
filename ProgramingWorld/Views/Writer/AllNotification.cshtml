@using EntityLayer.Concrete
@model List<Notification>

@{
    ViewData["Title"] = "AllNotification";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="content-wrapper">
<div class="page-header">
    <h3 class="page-title">
        <span class="page-title-icon bg-info text-white mr-2">
            <i class="mdi mdi-comment"></i>
        </span> Bütün Bildirimler
    </h3>
</div>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="mail-box">
                <table class="table table-hover table-mail">
                    <tr>
                        <th class="mail-ontact">Bildirim Konusu</th>
                        <th class="mail-subject">Bildirim Tarihi</th>
                    </tr>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr class="read">
                            <td class="mail-ontact"><a href="~/Writer/NotificationDetails/@item.NotificationID">@item.NotificationTitle</a></td>
                            <td class="mail-subject"><a href="~/Writer/NotificationDetails/@item.NotificationID">Tarih : @item.NotificationDate.ToShortDateString() | Saat : @item.NotificationDate.ToShortTimeString()</a></td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
</div>

