@model List<EntityLayer.Concrete.Comment>

@{
    ViewData["Title"] = "CommentAll";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">
            <span class="page-title-icon bg-info text-white mr-2">
                <i class="mdi mdi-checkerboard"></i>
            </span> Blog'a Ait Yorumlar
        </h3>
    </div>
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th> Yorum Yapanın Kullanıcı Adı </th>
                            <th> Blog'uma Vermiş Olduğu Skor </th>
                            <th> Yorum Tarihi </th> 
                            <th> Sil </th>
                            <th> Detay </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td> @item.CommentUserName </td>
                                <td> @item.BlogScore </td>
                                <td> @item.CommentDate.ToString("dd-MMM-yyyy") | @item.CommentDate.ToShortTimeString() </td>
                                <td> <a href="~/Writer/CommentDeleted/@item.CommentID/@(Url.AdresDuzenle(item.CommentUserName))" class="btn-sm btn-danger">Sil</a> </td>
                                <td> <a href="~/Writer/CommentDetails/@item.CommentID/@(Url.AdresDuzenle(item.CommentUserName))" class="btn-sm btn-info">Detay</a> </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>