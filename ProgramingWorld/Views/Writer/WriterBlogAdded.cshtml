@model EntityLayer.Concrete.Blog

@{
    ViewData["Title"] = "WriterBlogAdded";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">
            <span class="page-title-icon bg-info text-white mr-2">
                <i class="mdi mdi-checkerboard"></i>
            </span> Blog Ekle
        </h3>
    </div>
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <form class="forms-sample" asp-action="WriterBlogAdded" asp-controller="Writer" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="exampleInputName1">Blog Adı :</label>
                        <input type="text" class="form-control" asp-for="@Model.BlogTitle" id="exampleInputName1" placeholder="Blog Adı" required>
                        <p style="font-size:xx-small">Örnek : Photoshop 2021 Premium Full Edition - Türkçe + Version; Gibi</p>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Blog Anahtar Kelimeleri :</label>
                        <input type="text" class="form-control" asp-for="@Model.BlogKeyword" id="exampleInputName1" placeholder="Blog Anahtar Kelimeleri" required>
                        <p style="font-size: xx-small">Örnek : Photoshop 2021,Photoshop,Photoshop Full,Photoshop Türkçe,Photoshop 1.1 Version; Gibi</p>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Blog Açıklaması :</label>
                        <input type="text" class="form-control" asp-for="@Model.BlogContent" id="exampleInputName1" placeholder="Blog Açıklaması" required>
                        <p style="font-size:xx-small">Örnek : Photoshop 2021 Adobe şirketi tarafından görsel oluşturma ve editleme programı olarak sunulmuştur...; Gibi</p>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Uygulama Nasıl Yüklenir :</label>
                        <input type="email" class="form-control" asp-for="@Model.BlogContentSetupDetails" id="exampleInputEmail3" placeholder="Uygulama Nasıl Yüklenir" required>
                        <p style="font-size:xx-small">Örnek : Photoshop2021.Exe'yi Açın-Gelen Ekrandan Next'e Basın...; Gibi</p>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Uygulama Sistem Özellikleri :</label>
                        <input type="password" class="form-control" asp-for="@Model.BlogProgramingRequirement" id="exampleInputPassword4" placeholder="Uygulama Sistem özellikleri" required>
                        <p style="font-size:xx-small">Örnek : Windows 10 Uyumlu,3 Gb Alan,4 Gb Ram ...; Gibi</p>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Blog Resmi :</label>
                        <input type="file" name="formFile" class="file-upload-info" value="formFile" style="width:100%" /><br />
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Blog Kategori :</label>
                        @Html.DropDownListFor(I => I.CategoryID, (List<SelectListItem>)ViewBag.List, new { @class = "form-control", required = "true" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Blog Alt Kategori :</label>
                        @Html.DropDownListFor(I => I.SubCategoryID, (List<SelectListItem>)ViewBag.ListSubCategory, new { @class = "form-control", required = "true" })
                    </div>
                    <hr style="color:red" />
                    <div class="form-group">
                        <label for="exampleInputPassword4">MediaFire Linki :</label>
                        <input type="text" class="form-control" asp-for="@Model.MediaFire" id="exampleInputName1" placeholder="MediaFire Linki">
                        <p style="font-size:xx-small">Örnek : https://www.mediafire.com/xxx; Gibi</p>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Turbobit Linki :</label>
                        <input type="text" class="form-control" asp-for="@Model.Turbobit" id="exampleInputName1" placeholder="Turbobit Linki">
                        <p style="font-size:xx-small">Örnek : https://turbobit.com.tr/xxx; Gibi</p>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Google Driver Linki :</label>
                        <input type="text" class="form-control" asp-for="@Model.GoogleDriver" id="exampleInputName1" placeholder="GoogleDriver Linki">
                        <p style="font-size:xx-small">Örnek : https://drive.google.com/drive/xxx; Gibi</p>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Mega Linki :</label>
                        <input type="text" class="form-control" asp-for="@Model.Mega" id="exampleInputName1" placeholder="Mega Linki">
                        <p style="font-size:xx-small">Örnek : https://mega.io/xxx; Gibi</p>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Bitly Linki :</label>
                        <input type="text" class="form-control" asp-for="@Model.BitLY" id="exampleInputName1" placeholder="Bitly Linki">
                        <p style="font-size:xx-small">Örnek : https://bitly.com/xxx; Gibi</p>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Torrent Linki :</label>
                        <input type="text" class="form-control" asp-for="@Model.Torrent" id="exampleInputName1" placeholder="Torrent Linki">
                    </div>
                    <div class="form-group" style="margin-top:40px">
                        <button class="btn btn-info" style="width:100%">Blog Ekle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
