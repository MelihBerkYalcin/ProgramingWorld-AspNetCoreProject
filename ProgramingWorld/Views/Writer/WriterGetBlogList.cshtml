@using EntityLayer.Concrete
@model List<Blog> 

@{
    ViewData["Title"] = "WriterGetBlogList";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">
            <span class="page-title-icon bg-info text-white mr-2">
                <i class="mdi mdi-checkerboard"></i>
            </span> Bloglarım
        </h3>
    </div>
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th> Blogunuzun Resmi </th>
                            <th> Blogunuzun Adı </th>
                            <th> Blogunuzun Oluşturuldugunuz Tarih </th>
                            <th> Blogunuzun Kategorisi </th>
                            <th> Güncelle </th>
                            <th> Sil </th>
                            <th> Detay </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td class="py-1">
                                <img src="@item.BlogIMGURL" alt="image" />
                            </td>
                            <td> @item.BlogTitle </td>
                            <td> @item.BlogCreateDate.ToString("dd-MMM-yyyy") </td>
                            <td>
                                <label class="badge badge-info">@item.Category.CategoryName</label>
                            </td>
                            <td> <a href="~/Writer/WriterBlogUpdate/@item.BlogID/@(Url.AdresDuzenle(item.BlogTitle))" class="btn-sm" style="color:white; background-color:darkorange">Güncelle</a> </td>
                            <td> <a href="~/Writer/WriterBlogDelete/@item.BlogID/@(Url.AdresDuzenle(item.BlogTitle))" class="btn-sm" style="color:white; background-color:red">Sil</a> </td>
                            <td> <a href="~/Blog/BlogDetails/@item.BlogID/@(Url.AdresDuzenle(item.BlogTitle))" class="btn-sm btn-info">Detay</a> </td>
                        </tr>
                        }
                    </tbody>
                </table>
                <div style="margin-top:30px">
                    <a href="~/Writer/WriterBlogAdded" class="btn btn-info" style="width:100%">Blog Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>
